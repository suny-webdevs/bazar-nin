// schema.prisma
generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  password       String
  passwordChange Boolean  @default(true)
  phone          String
  image          String?
  imagePublicId  String?
  role           UserRole @default(CUSTOMER)
  isDeleted      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  addressBook Address[]
  orders      Order[]

  @@map("users")
}

enum UserRole {
  ADMIN
  CUSTOMER
}

model Address {
  id          String     @id @default(uuid())
  userId      String
  village     String
  subDistrict String
  district    String
  state       String
  country     String     @default("Bangladesh")
  tag         AddressTag @default(HOME)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user   User    @relation(fields: [userId], references: [id])
  orders Order[]

  @@map("addresses")
}

enum AddressTag {
  HOME
  OFFICE
  WORK
}

model Product {
  id             String      @id @default(uuid())
  name           String
  description    String
  price          Int
  stock          Int
  category       String
  subCategory    String?
  images         String[]
  imagesPublicId String[]
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  orderItems     OrderItem[]

  @@map("products")
}

model Order {
  id          String      @id @default(uuid())
  userId      String
  status      OrderStatus @default(PENDING)
  totalAmount Int

  items     OrderItem[]
  createdAt DateTime    @default(now())

  user      User     @relation(fields: [userId], references: [id])
  address   Address? @relation(fields: [addressId], references: [id])
  addressId String?

  @@map("orders")
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  productId String
  price     Decimal @db.Decimal(10, 2)
  quantity  Int

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("orderItems")
}
